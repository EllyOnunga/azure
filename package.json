{
  "name": "azurebay-restaurant",
  "version": "1.0.0",
  "description": "Azure Bay Restaurant Website",
  "scripts": {
    "format": "prettier --write \"**/*.html\" \"**/*.css\" \"**/*.js\"",
    "format:check": "prettier --check \"**/*.html\" \"**/*.css\" \"**/*.js\"",
    "lint": "htmlhint **/*.html",
    "lint:fix": "htmlhint **/*.html --fix",
    "build": "npm run lint && npm run format:check",
    "build:prod": "npm run lint && npm run format && echo 'Production build complete!'",
    "prepare": "npx husky install"
  },
  "devDependencies": {
    "prettier": "^3.2.0",
    "htmlhint": "^1.1.4",
    "husky": "^8.0.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "printWidth": 120,
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format:check"
    }
  }
}
